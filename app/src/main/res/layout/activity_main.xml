<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player name"
        android:textColor="@color/colorMain" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Game \nmagic box"
            android:textColor="@color/colorMain"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Times"
            android:textColor="@color/colorMain"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/tv_box_1"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />

            <Button
                android:id="@+id/tv_box_2"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />

            <Button
                android:id="@+id/tv_box_3"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/tv_box_4"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />

            <Button
                android:id="@+id/tv_box_5"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />

            <Button
                android:id="@+id/tv_box_6"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/tv_box_7"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />

            <Button
                android:id="@+id/tv_box_8"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />

            <Button
                android:id="@+id/tv_box_9"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:gravity="center"
                android:textSize="40dp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>